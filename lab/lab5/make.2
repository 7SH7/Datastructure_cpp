CC = g++
LIBDIR = ../../lib
INCDIR = ../../include
CCFLAGS = -Wall -std=c++11 -g
LDFLAGS = -L$(LIBDIR) -lnowic

SRCS = sortDriver.cpp comparator.cpp printlist.cpp bubble.cpp quick.cpp insertion.cpp merge.cpp selection.cpp 
OBJS = $(SRCS:.cpp=.o)
EXE1 = sortDriver

$(EXE1): $(OBJS)
	$(CC) -o $@ $^ $(LDFLAGS)
%.o: %.cpp
	$(CC) -c $(CCFLAGS) -I$(INCDIR) $< 

.PHONY: all clean
all: $(EXE1)
clean:
	rm -f $(OBJS) $(EXE1)